<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    tools:context="com.practica.jmm.galleryf2f.FullscreenActivity"
    >

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black_overlay">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewppager"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:layout_marginTop="@dimen/item_margin">
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_copy"
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_48"
                android:layout_marginBottom="10dp"
                android:onClick="editarImagen"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_shared"
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/share_48"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                />
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_trush"
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/trash_48"
                android:onClick="borrarImagen"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <Button
                style="?metaButtonBarButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>