<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/linear_archivo"
    android:background="@android:color/black"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:orientation="horizontal"
    android:theme="@style/BotonRaised"
    android:background="@android:color/black"

    >
    <ImageView
        android:id="@+id/Item_nav_archivo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/folder_blue"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/text_nav_archivo"
        android:layout_width="wrap_content"
        android:text="Galleria de fotos 1"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:paddingTop="12dp"
        android:ellipsize="end"
        android:textColor="@color/Blanco"
        tools:textColor="@android:color/darker_gray" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ly_barra"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/back_blue"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="7dp">
    </LinearLayout>
</LinearLayout>
