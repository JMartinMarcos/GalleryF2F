<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.view.ViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewPagerRecycler"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="54dp" >
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/primaryContentCardView"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout android:layout_height="match_parent"
        android:id="@+id/cv_navigator"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        >

        <LinearLayout
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
            android:id="@+id/img_nav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_send"/>
            <TextView
            android:id="@+id/text_nav"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Galleria de fotos 1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/Blanco"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/back_blue"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="35dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/secondaryContentFrameLayout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout android:layout_height="match_parent"
            android:id="@+id/cv_navigator2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@android:color/black"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_del_nav"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Eliminar Galeria"
            android:textSize="16sp"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/Blanco"/>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="48dp"
            android:layout_gravity="right"
            android:layout_height="48dp"
            android:text="Button1"
            android:background="@color/back_blue"
            android:scaleType="centerCrop"
            android:src="@drawable/papeleraroja"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/back_blue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="35dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.view.ViewPager>
